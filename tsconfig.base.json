{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}